name: performance-influence-modeling
entry_points:
  system_loading:
    parameters:
      path: path
      system: system
      year: year
    command: "python system_loading/system_loading.py --path={path} --system={system} --year={year}"

  sampling:
    parameters:
      data_dir: data_dir
      n: n
      method: method
    command: "python sampling/sampling.py --data_dir={data_dir} --n={n} --method={method}"

  main:
    parameters:
      sampling_method: { type: str, default: true_random }
      sampling_n: { type: int, default: 10 }
    command: "python main.py --sampling_n={sampling_n} --sampling_method={sampling_method}"
