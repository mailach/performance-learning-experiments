name: performance-influence-modeling
entry_points:
  systems:
    parameters:
      param_file: run.yaml
    command: "python load_system.py --param_file={param_file}"

  sampling:
    parameters:
      system_run_id: system_run_id
      n: n
      method: method
    command: "python sampling.py --system_run_id={system_run_id} --n={n} --method={method}"

  learning:
    parameters:
      workflow_id: workflow_id
      sampling_run_id: sampling_run_id
      method: method
      min_samples_split: { type: int, default: 2 }
      min_samples_leaf: { type: ing, default: 1 }
    command: "python learning.py --workflow_id={workflow_id} --sampling_run_id={sampling_run_id} --method={method} --min_samples_split={min_samples_split} --min_samples_leaf={min_samples_leaf}"

  evaluation:
    parameters:
      sampling_run_id: sampling_run_id
      workflow_id: workflow_id
    command: "python evaluation.py --workflow_id={workflow_id} --sampling_run_id={sampling_run_id}"

  main:
    parameters:
      param_file: { type: str, default: run.yaml }
    command: "python main.py --param_file={param_file}"
