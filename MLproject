name: performance-influence-modeling
entry_points:
  systems:
    parameters:
      param_file: run.yaml
    command: "python load_system.py --param_file={param_file}"

  sampling:
    parameters:
      system_run_id: system_run_id
      n: n
      method: method
    command: "python sampling.py --system_run_id={system_run_id} --n={n} --method={method}"

  main:
    parameters:
      param_file: { type: str, default: run.yaml }
      # sampling_method: { type: str, default: true_random }
      # sampling_n: { type: int, default: 10 }
    command: "python main.py --param_file={param_file}"
