name: splc-sampling

docker_env:
  image: mailach/splc2py:latest
  environment: ["MLFLOW_TRACKING_URI","MLFLOW_TRACKING_USERNAME", "MLFLOW_TRACKING_PASSWORD"]
entry_points:
  sampling:
    parameters:
      system_run_id: {type: string}
      binary_method: {type: string}
      numeric_method: {type: string, default: None}
    command: "python3 splc-sampling.py --system_run_id={system_run_id} --binary_method={binary_method} --numeric_method={numeric_method}"