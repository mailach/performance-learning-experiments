name: pim-sklearn

docker_env:
  image: mailach/pim-sklearn
  environment:
    [
      "MLFLOW_TRACKING_URI",
      "MLFLOW_TRACKING_USERNAME",
      "MLFLOW_TRACKING_PASSWORD",
    ]

entry_points:
  sampling:
    parameters:
      system_run_id: system_run_id
      n: n
      method: method
      logs_to_artifact: { type: bool, default: False }
    command: "python sampling.py --system_run_id={system_run_id} --n={n} --method={method} --logs_to_artifact={logs_to_artifact}"
  learning:
    parameters:
      sampling_run_id: sampling_run_id
      method: method
      nfp: nfp
      logs_to_artifact: { type: bool, default: False }
    command: "python learning.py --sampling_run_id={sampling_run_id} --method={method} --nfp={nfp} --logs_to_artifact={logs_to_artifact}"

