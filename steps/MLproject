name: pim-pipeline

docker_env: 
  image: mailach/pim-pipeline
  environment: ["MLFLOW_TRACKING_URI","MLFLOW_TRACKING_USERNAME", "MLFLOW_TRACKING_PASSWORD"]

entry_points:
  systems:
    parameters:
      data_dir: {type: str, default: None}
    command: "python systems/load_system.py --data_dir={data_dir}"

  sampling:
    parameters:
      system_run_id: system_run_id
      n: n
      method: method
    command: "python sampling/sk-learn/sampling.py --system_run_id={system_run_id} --n={n} --method={method}"

  learning:
    parameters:
      sampling_run_id: sampling_run_id
      method: method
      nfp: nfp
      min_samples_split: { type: int, default: 2 }
      min_samples_leaf: { type: ing, default: 1 }
    command: "python learning/sk-learn/learning.py --sampling_run_id={sampling_run_id} --method={method} --nfp={nfp} "

  evaluation:
    parameters:
      learning_run_id: learning_run_id
    command: "python evaluation/evaluation.py --learning_run_id={learning_run_id}"

  main:
    parameters:
      param_file: { type: str, default: run.yaml }
    command: "python main.py --param_file={param_file}"
